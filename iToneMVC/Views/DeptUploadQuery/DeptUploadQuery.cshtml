<form asp-action="DoUpload" method="post" enctype="multipart/form-data">
    <div class="container">
        <h4>@ViewBag.LocaMark<a href="/Home/Index">@ViewBag.HomeName</a> / 簡報議題上傳-查詢</h4>
        <a class="btn btn-primary" href="/DeptUpload/DeptUpload">新增</a>
        @*
        <embed src="@Url.Action("ShowPdf")" width="100%" height="300" />
        *@

        @if (ViewBag.PdfFileBase64 != null)
        {
            <h>上傳檔案檢視：</h>
            <embed src="data:application/pdf;base64,@ViewBag.PdfFileBase64" width="100%" height="300" />
        }

        <br /><br />

        <dl>
            <dt>
                <label for="FileUpload_FormFile">請選擇部門 PDF 檔案：</label>
            </dt>
            <dd>
                <input type="file" name="file" id="file" class="form-control" accept=".pdf" />
            </dd>
        </dl>

        <button type="submit" class="btn btn-primary" onclick="validatePDF()">檔案上傳</button>

        <div style="margin-top:15px">
            <output name="result"></output>
            @*
            @if (ViewBag.FilePath != null)
            {
            <p>檔案上傳成功路徑：@ViewBag.FilePath</p>
            } *@
        </div>
    </div>
    @* } *@
</form>